{
  "services": [
    {
      "name": "backend",
      "path": "backend",
      "build": {
        "builder": "python",
        "start": "uvicorn api:app --host 0.0.0.0 --port $PORT"
      }
    },
    {
      "name": "frontend",
      "path": "frontend",
      "build": {
        "builder": "npm",
        "buildCommand": "npm install && npm run build",
        "start": "serve -s build -l $PORT"
      }
    }
  ]
}
